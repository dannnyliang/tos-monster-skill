{
  "name": "tos-monster-skill",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "csvtojson": "^2.0.8",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "reactstrap": "^8.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "csvtojson": "node dataProcess/transformImages && node dataProcess/transformMonsters",
    "data-combine": "node dataProcess/dataCombine",
    "local-data": "yarn csvtojson && yarn data-combine"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "(apps/**|shared/**)/*.{css,scss}": [
        "prettier --write",
        "git add"
      ],
      "+(apps/**/*.{js,jsx}|shared/**/*.{js,jsx})": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
