{
  "name": "tos-monster-skill",
  "version": "3.0.1",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "csvtojson": "^2.0.8",
    "firebase": "^5.11.1",
    "lodash": "^4.17.21",
    "node-sass": "^4.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-highlight-words": "^0.16.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "2.1.8",
    "react-select": "^2.4.3",
    "reactstrap": "^8.0.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.2.1",
    "precise-commits": "^1.0.2",
    "prettier": "^1.17.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
